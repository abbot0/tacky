{
  "name": "tacky",
  "version": "1.0.2",
  "description": "Trello-style desktop app built with Electron + React",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "npm-run-all -p dev:watch dev:electron",
    "dev:watch": "webpack --watch --mode development",
    "dev:electron": "wait-on dist/index.html && cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=1 electron .",
    "build": "webpack --mode production",
    "dist": "npm run build && electron-builder -w",
    "package:win": "npm run build && electron-builder --win nsis --publish never --config.directories.output=release",
    "release:win": "npm run build && electron-builder --publish always --win nsis",
    "release": "npm run release:win"
  },
  "build": {
    "appId": "com.tacky.app",
    "productName": "Tacky",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "abbot0",
        "repo": "tacky"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "extraMetadata": {
      "main": "electron/main.cjs"
    }
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@hello-pangea/dnd": "16.5.0",
    "electron-updater": "6.1.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "roughjs": "^4.6.6"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@babel/preset-react": "7.24.7",
    "babel-loader": "9.1.3",
    "cross-env": "7.0.3",
    "css-loader": "6.10.0",
    "electron": "28.2.0",
    "electron-builder": "24.6.4",
    "html-webpack-plugin": "5.6.0",
    "npm-run-all": "4.1.5",
    "style-loader": "3.3.4",
    "wait-on": "7.2.0",
    "webpack": "5.92.1",
    "webpack-cli": "5.1.4"
  }
}
